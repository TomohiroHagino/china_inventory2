<p id="notice"><%= notice %></p>

<h1>Take Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Fiscal year</th>
      <th>Beginning product inventory</th>
      <th>Cost of sales</th>
      <th>Period end product inventory</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @take_inventories.each do |take_inventory| %>
      <tr>
        <td><%= take_inventory.fiscal_year %></td>
        <td><%= take_inventory.beginning_product_inventory %></td>
        <td><%= take_inventory.cost_of_sales %></td>
        <td><%= take_inventory.period_end_product_inventory %></td>
        <td><%= take_inventory.user %></td>
        <td><%= link_to 'Show', take_inventory %></td>
        <td><%= link_to 'Edit', edit_take_inventory_path(take_inventory) %></td>
        <td><%= link_to 'Destroy', take_inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

