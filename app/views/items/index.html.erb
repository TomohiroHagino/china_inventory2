<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Item number</th>
      <th>Item title</th>
      <th>Item picture</th>
      <th>China item picture</th>
      <th>Part number</th>
      <th>Jan code</th>
      <th>Simulate price</th>
      <th>Yahoo</th>
      <th>Amazon</th>
      <th>Mercari</th>
      <th>Rakuma</th>
      <th>Rakuten</th>
      <th>Yahooshopping</th>
      <th>Buy china item title</th>
      <th>Buy china item url</th>
      <th>Sell japan url</th>
      <th>Researcher</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_number %></td>
        <td><%= item.item_title %></td>
        <td><%= item.item_picture %></td>
        <td><%= item.china_item_picture %></td>
        <td><%= item.part_number %></td>
        <td><%= item.jan_code %></td>
        <td><%= item.simulate_price %></td>
        <td><%= item.yahoo %></td>
        <td><%= item.amazon %></td>
        <td><%= item.mercari %></td>
        <td><%= item.rakuma %></td>
        <td><%= item.rakuten %></td>
        <td><%= item.yahooshopping %></td>
        <td><%= item.buy_china_item_title %></td>
        <td><%= item.buy_china_item_url %></td>
        <td><%= item.sell_japan_url %></td>
        <td><%= item.researcher_id %></td>
        <td><%= item.team %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

