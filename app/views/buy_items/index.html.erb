<p id="notice"><%= notice %></p>

<h1>Buy Items</h1>

<table>
  <thead>
    <tr>
      <th>Japan image url</th>
      <th>Japan title</th>
      <th>Japan url</th>
      <th>Item description</th>
      <th>Japan price</th>
      <th>China image url</th>
      <th>China title</th>
      <th>China url</th>
      <th>China price</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buy_items.each do |buy_item| %>
      <tr>
        <td><%= buy_item.japan_image_url %></td>
        <td><%= buy_item.japan_title %></td>
        <td><%= buy_item.japan_url %></td>
        <td><%= buy_item.item_description %></td>
        <td><%= buy_item.japan_price %></td>
        <td><%= buy_item.china_image_url %></td>
        <td><%= buy_item.china_title %></td>
        <td><%= buy_item.china_url %></td>
        <td><%= buy_item.china_price %></td>
        <td><%= buy_item.team %></td>
        <td><%= link_to 'Show', buy_item %></td>
        <td><%= link_to 'Edit', edit_buy_item_path(buy_item) %></td>
        <td><%= link_to 'Destroy', buy_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Buy Item', new_buy_item_path %>
